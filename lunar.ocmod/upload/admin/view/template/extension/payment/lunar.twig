{{ header }}{{ column_left }}

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="lunar-config-form" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
                            class="fa fa-reply"></i></a>
                <a href="{{ payment_lunar_payments }}" data-toggle="tooltip" title="{{ button_payments }}"
                        class="btn btn-success"><i class="fa fa-calculator"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i>&nbsp;{{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if success %}
            <div class="alert alert-success"><i class="fa fa-exclamation-circle"></i>&nbsp;{{ success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title" data-module-version="{{ plugin_version }}"><i class="fa fa-pencil"></i>&nbsp;{{ text_edit_settings }}</h3>
            </div>
            <div class="panel-body">

                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="lunar-config-form"
                        class="form-horizontal">

                    <div class="alert alert-info">{{ text_description }}</div>

                    {# Store select begin #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="config_selected_store"><span
                                    data-toggle="tooltip"
                                    title="{{ help_select_store }}">{{ select_store }}</span></label>
                        <div class="col-sm-10">
                            <select name="config_selected_store" id="config_selected_store"
                                    class="form-control">
                                {% for store in stores %}
                                        <option value="{{ store.store_id }}"
                                            {% if store.store_id == config_selected_store %}
                                                {{ 'selected="selected"' }}
                                            {% endif %}>
                                            {{ store.name }}
                                        </option>
                                {% endfor %}
                            </select>
                            <div class="select-store-dropdown-error"></div>
                        </div>
                    </div>
                    {# Store select end #}

                    <ul class="nav nav-tabs" id="lunar-tabs">
                        <li class="active"><a href="#tab-card-general_settings" data-toggle="tab">{{ text_general_settings }}</a></li>
                        <li><a href="#tab-card-advanced_settings" data-toggle="tab">{{ text_advanced_settings }}</a></li>
                        <li><a href="#tab-mobilepay-general_settings" data-toggle="tab">{{ "MOBILEPAY" }}</a></li>
                        <li><a href="#tab-mobilepay-advanced_settings" data-toggle="tab">{{ "MOBILEPAY Advanced" }}</a></li>
                    </ul>

                    <div class="tab-content">

                        {{ lunar_card_setting_fields }}

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $('#tabs a:first').tab('show');

    /**
     * On select a store, populate form data with selected store config data
     */
    $("#config_selected_store").on("change", function() {

        /** Remove any previous errors. */
        $(".select-store-dropdown-error").val();

        /** Set store ID variable. */
        var storeId = $(this).val();

        /** Ajax call to get selected store config data. */
        $.ajax({
            method: "POST",
            url: "index.php?route=extension/payment/lunar/get_store_settings&user_token=" + getURLVar("user_token"),
            dataType: "json",
            contentType: "application/x-www-form-urlencoded",
            data: {
                store_id: storeId
            },
            success: function (data, status, xhr) {

                /** Add selected attribute to selected store option */
                setSelectedAttributeOnSelectedOption(this.id, storeId)

                /** Add status option to status input. If not exists, change to disabled. */
                $("#payment_lunar_status option").each(function () {
                    if (data?.[`payment_lunar_status`]) {
                        if (data[`payment_lunar_status`] !== $(this).val()) {
                            $(this).removeAttr("selected");
                        } else {
                            $(this).attr("selected", true);
                        }
                    } else {
                        if (1 == $(this).val()) {
                            $(this).removeAttr("selected");
                        } else {
                            $(this).attr("selected", true);
                        }
                    }
                });

                $("#payment_lunar_method_title").val(data?.[`payment_lunar_method_title`] ?? '');
                $("#payment_lunar_popup_title").val(data?.[`payment_lunar_checkout_title`] ?? '');

                $(`input[name='payment_lunar_checkout_cc_logo[]']`).each(function () {
                    if (`payment_lunar_checkout_cc_logo` in data) {
                        if ( ! data[`payment_lunar_checkout_cc_logo`].includes($(this).val())) {
                            $(this).prop("checked", false);
                        } else {
                            $(this).prop("checked", true);
                        }
                    } else {
                        $(this).prop("checked", true);
                    }
                });

                /** Set selected on api mode dropdown. Default = live. */
                setSelectedAttributeOnSelectedOption("payment_lunar_api_mode", data?.[`payment_lunar_api_mode`] ?? "live");
                toggleFields(data?.["payment_lunar_api_mode"] ?? "live")

                /** Set selected on capture mode dropdown. Default = delayed. */
                setSelectedAttributeOnSelectedOption("payment_lunar_capture_mode", data?.[`payment_lunar_capture_mode`] ?? "delayed");

                $("#payment_lunar_app_key_test").val(data?.[`payment_lunar_app_key_test`] ?? '');
                $("#payment_lunar_public_key_test").val(data?.[`payment_lunar_public_key_test`] ?? '');
                $("#payment_lunar_app_key_live").val(data?.[`payment_lunar_app_key_live`] ?? '');
                $("#payment_lunar_public_key_live").val(data?.[`payment_lunar_public_key_live`] ?? '');

                /**
                 * !!! HARDCODED ORDER STATUSES IDS !!!
                 */
                $("#payment_lunar_authorize_status_id").val(data?.[`payment_lunar_authorize_status_id`] ?? 1);
                $("#payment_lunar_capture_status_id").val(data?.[`payment_lunar_capture_status_id`] ?? 5);
                $("#payment_lunar_refund_status_id").val(data?.[`payment_lunar_refund_status_id`] ?? 11);
                $("#payment_lunar_void_status_id").val(data?.[`payment_lunar_void_status_id`] ?? 16);

                $("#payment_lunar_logging").val(data?.[`payment_lunar_logging`] ?? 0);
                $("#payment_lunar_minimum_total").val(data?.[`payment_lunar_minimum_total`] ?? 0);
                $("#payment_lunar_geo_zone").val(data?.[`payment_lunar_geo_zone`] ?? 0);
                $("#payment_lunar_sort_order").val(data?.[`payment_lunar_sort_order`] ?? 0);

            },
            error: function (jqXhr, textStatus, errorMessage) {
                /** Check if error is of type "parsererror". This shows up when token expire. */
                if ('parsererror' == textStatus) {
                    location.href = 'index.php?route=extension/payment/lunar';
                } else {
                    $(".select-store-dropdown-error").append("Error: " + errorMessage).addClass("text-danger");
                    console.error(errorMessage)
                }
            }
        });

    });

    /** Module status set "selected" on change. */
    $("#payment_lunar_status").on("change", function() {
        setSelectedAttributeOnSelectedOption(this.id, $(this).val());
    });

    /** Module api mode set "selected" on change. */
    $("#payment_lunar_api_mode").on("change", function() {
        setSelectedAttributeOnSelectedOption(this.id, $(this).val());
    });

    /**
     * Set selected attribute on dropdown selected option
     */
    function setSelectedAttributeOnSelectedOption(selector, value) {
        $("#" + selector + " option").each(function () {
            if (value !== $(this).val()) {
                $(this).removeAttr("selected");
            } else {
                $(this).attr("selected", true);
            }
        });
    }

</script>

{{ footer }}
