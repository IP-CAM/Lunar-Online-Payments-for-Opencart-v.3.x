
<div class="buttons">
  <div class="pull-right">
    <input type="button" value="{{ button_confirm }}" id="button-confirm" class="btn btn-primary" />
  </div>
</div>

<script type="text/javascript">

    $('#button-confirm').on('click', function() {
      $('.payment-alert').remove();

      $.ajax({
        url: '{{ paymentRedirectUrl }}',
        type: 'POST',
        dataType: 'json',
        cache: false,
        
        beforeSend: function() {
          $('#button-confirm').button('loading');
        },

        complete: function() {
          $('#button-confirm').button('reset');
        },

        success: function(data) {
          if (data.hasOwnProperty('error')) {
            let html = `<div class="alert alert-danger payment-alert">
                    <i class="fa fa-exclamation-circle"></i>
                      ${data.error}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                  </div>`;
            $('#button-confirm').closest('.buttons').before(html);
          }
          if (data.hasOwnProperty('redirect')) {
            location.href = data.redirect;
          }
        }
      });

    });

</script>
